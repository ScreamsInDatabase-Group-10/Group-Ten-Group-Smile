.paginated-table {
    height: 9fr;
}

.pagination-controls {
    height: 1fr;
    grid-size: 11 1;
    margin-top: 1;
    grid-gutter: 1 1;
    align: center middle;
}

.pagination-control-item.previous {
    column-span: 1;
    width: 100%;
}

.pagination-control-item.next {
    column-span: 1;
    width: 100%;
}

.pagination-control-item.status {
    column-span: 2;
    align: center middle;
}

.pagination-control-item.spacer {
    column-span: 3;
}

.pagination-control-item.page-size {
    column-span: 1;
    width: 100%;
}